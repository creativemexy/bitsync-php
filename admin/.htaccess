# Admin Directory Security
Options -Indexes

# Enable PHP
AddHandler application/x-httpd-php .php

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Prevent access to sensitive files
<Files "*.json">
    Order allow,deny
    Deny from all
</Files>

<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Allow access to admin files
<Files "index.php">
    Order allow,deny
    Allow from all
</Files>

<Files "dashboard.php">
    Order allow,deny
    Allow from all
</Files>

<Files "debug.php">
    Order allow,deny
    Allow from all
</Files>

<Files "test.php">
    Order allow,deny
    Allow from all
</Files> 